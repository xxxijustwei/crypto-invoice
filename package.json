    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-use-callback-ref": "^1.1.1",
    "axios": "^1.11.0",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "decimal.js": "^10.6.0",
    "jotai": "^2.13.1",
    "lint-staged": "^15.5.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.503.0",
    "motion": "^12.23.12",
    "next": "15.4.5",
    "next-themes": "^0.4.6",
    "puppeteer-core": "24.8.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "react-query": "^3.39.3",
    "tailwind-merge": "^3.2.0",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3",
    "@sparticuz/chromium": "138.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "next-rspack": "^15.4.5",
    "puppeteer": "24.8.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,jsonc}": [
      "biome check --fix --unsafe ./src",
      "biome check --files-ignore-unknown=true ./src",
      "biome check --write --no-errors-on-unmatched ./src",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched ./src",
      "biome check --write --unsafe --no-errors-on-unmatched ./src",
      "biome format --write --no-errors-on-unmatched ./src",
      "biome lint --write --no-errors-on-unmatched ./src"
    ]
  }
}
